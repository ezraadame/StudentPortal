<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StudentPortal.SplashPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="LightSteelBlue">
    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="school-bag.png" HeightRequest="100" WidthRequest="100"/>
            <Label Text="Student Portal" FontSize="24" TextColor="White" HorizontalOptions="Center"/>
            <Label Text="Loading..." FontSize="16" TextColor="White" HorizontalOptions="Center"/>
            <ActivityIndicator IsRunning="True" Color="White"/>
        </StackLayout>
    </Grid>
</ContentPage>