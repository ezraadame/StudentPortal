<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentPortal.Pages.NavigationPages.HomePageRelated.HomeNavPage"
             Title="Home">
    <VerticalStackLayout Padding="20" Spacing="20">

        <Label 
            Text="Student Portal"
            FontSize="34"
            FontAttributes="Bold"
            TextColor="Black"
            HorizontalOptions="Center"
            Margin="0,50,0,0"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Frame BackgroundColor="GhostWhite"
                   CornerRadius="25"
                   Padding="15,10"
                   Margin="0,10,0,0"
                   HasShadow="True">
                <Entry x:Name="SearchEntry"
                       Placeholder="ðŸ” Search courses..."
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       TextChanged="SearchEntry_TextChanged"/>
            </Frame>


            <Frame Grid.Row="1" 
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="0"
                   Margin="25,0,25,10"
                   HasShadow="True"
                   IsVisible="False"
                   x:Name="SearchResultsFrame">

                <CollectionView 
                    x:Name="SearchResultsView" 
                    ItemsSource="{Binding SearchResults}"
                    BackgroundColor="Blue"
                    MaximumHeightRequest="300">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="15,12" 
                                  BackgroundColor="White">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                </Grid.GestureRecognizers>
                                <StackLayout Spacing="4">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="Black" />
                                    <Label Text="{Binding InstructorName, StringFormat='Instructor: {0}'}" 
                                           FontSize="14" 
                                           TextColor="Gray" />
                                    <Label Text="{Binding Status}" 
                                           FontSize="12" 
                                           TextColor="DodgerBlue"
                                           FontAttributes="Italic" />
                                </StackLayout>


                                <BoxView Color="LightGray" 
                                         HeightRequest="1" 
                                         VerticalOptions="End" 
                                         Margin="0,0,0,0" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>


            <Label x:Name="NoResultsLabel"
                   Grid.Row="1"
                   Text="No courses found matching your search"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsVisible="False"
                   TextColor="Gray"
                   FontAttributes="Italic"
                   Margin="25,20,25,20" />

            <StackLayout Grid.Row="2" Spacing="50" Margin="0,30,0,0">
                <Button
                    x:Name="StudentClassworkButton"
                    Text="Access Student Classwork"
                    TextColor="White"
                    WidthRequest="300"
                    BackgroundColor="DodgerBlue"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Center"
                    Clicked="StudentClassworkButton_Clicked" />

                <Button
                    x:Name="navSetNotificationsButton"
                    Text="Set Notification Preferences"
                    TextColor="White"
                    WidthRequest="300"
                    BackgroundColor="MediumPurple"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Center"
                    Clicked="NavSetNotificationsButton_Clicked" />

                <Button
                    x:Name="ReportButton"
                    Text="Access Reports"
                    TextColor="White"
                    WidthRequest="300"
                    BackgroundColor="#FFA500"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Center"
                    Clicked="ReportButton_Clicked" />

                <Button Text="Logout"
                        x:Name="LogoutButton"
                        Clicked="LogoutButton_Clicked"
                        BackgroundColor="LightCoral"
                        TextColor="White" />
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>